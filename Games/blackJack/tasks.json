{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clean Blackjack",
      "type": "shell",
      "command": "rm",
      "args": ["-f", "${workspaceFolder}/build/Debug/main.o", "${workspaceFolder}/build/Debug/blackjack"],
      "problemMatcher": [],
      "detail": "Task to clean old build files for Blackjack."
    },
    {
      "label": "Build Blackjack",
      "type": "shell",
      "command": "g++",
      "args": [
        "-IhelperFunctions",
        "-ImajorComponents",
        "-Wall",
        "-Wextra",
        "-Wpedantic",
        "-Wshadow",
        "-Wformat=2",
        "-Wcast-align",
        "-Wconversion",
        "-Wsign-conversion",
        "-Wnull-dereference",
        "-g3",
        "-O0",
        "-c",
        "${workspaceFolder}/main.cpp",
        "-o",
        "${workspaceFolder}/build/Debug/main.o"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Generated task for building Blackjack."
    },
    {
      "label": "Link Blackjack",
      "type": "shell",
      "command": "g++",
      "args": ["${workspaceFolder}/build/Debug/main.o", "-o", "${workspaceFolder}/build/Debug/blackjack"],
      "problemMatcher": [],
      "detail": "Task to link the object files and create the Blackjack executable."
    },
    {
      "label": "Build and Clean Blackjack",
      "dependsOrder": "sequence",
      "dependsOn": ["Clean Blackjack", "Build Blackjack", "Link Blackjack"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Cleans, builds, and links the Blackjack project."
    }
  ]
}
